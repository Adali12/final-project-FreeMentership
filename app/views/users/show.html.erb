      <div class="card" style="width: 25rem;">
        <div class="card-header" style="color:blue; "><b><%= @user.email %></div>
        <div class="card-body" style="width: 25rem;">
          <strong>Firstname:</strong>
          <%= @user.firstName %>
          </p>
          <p>
            <strong>Lastname:</strong>
            <%= @user.lastName %>
          </p>
          <p>
            <strong>Email:</strong>
            <%= @user.email %>
          </p>
          <p>
            <strong>Address:</strong>
            <%= @user.address %>
          </p>
          <p>
            <strong>Bio:</strong>
            <%= @user.bio %>
          </p>
          <p>
            <strong>Occupation:</strong>
            <%= @user.occupation %>
          </p>
          <p>
            <strong>Expertise:</strong>
            <%= @user.expertise %>
          </p>
        </div>
        <div class="card-footer">
          <%= link_to 'Edit', edit_user_path(@user) %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card ml-auto" style="width: 15rem;">
        <div class="card-header">
          <%= link_to current_user.lastName, user_path(current_user.id),class:"col-sm-3",class:"btn btn-secondary" %>
          <div class="card-header">View My Cv</div>
          <div class="card-body"><% if logged_in? %>
            <% check = 0, links='1', id=nil %>
            <% @profiles.each do |profile| %>
              <% if logged_in?%>
            <% if current_user.id == profile.user_id %>
            <% check = 1%>
            <%links = profile.pic %>
            <%id =profile%>
            <strong>Cv:
              <%= link_to 'view' ,profile.cv%>
              <%= link_to 'Download',profile.cv, download: ''%>
            </strong>
            <td><%= link_to 'comment',profile%></td>
            <% end %>
            <% end %>
            <% end %>
            <% if check==1 %>
            <p><%= image_tag links,size:"50x60", class:"rounded" unless links.blank? %></p>
          </div>
          
          <div class="card-footer">
            <%= link_to 'Edit ', edit_profile_path(id),class:"col-sm-3",class:"btn btn-secondary"%>
            <%= link_to 'remove ', id, method: :delete, data: { confirm: 'Are you sure?' },class:"col-sm-3",class:"btn btn-danger" %>
            
            <% else %>
            <p><i class="fal fa-user"></i></p>
            <%= link_to 'upload profile ', new_profile_path ,class:"btn btn-secondary"%>
            <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>     
  </div>
